<Page xmlns="http://www.nativescript.org/tns.xsd" xmlns:drawer="nativescript-telerik-ui/sidedrawer" xmlns:lv="nativescript-telerik-ui/listview" loaded="onPageLoaded">
    <page.actionBar>
        <action-bar>
           <ActionBar.titleView>
                <Label text="QuotesApp" cssClass="custom-action-bar" id="title"/>
            </ActionBar.titleView>
        </action-bar>
    </page.actionBar>
    <drawer:rad-side-drawer id="drawer" drawerLocation="Left">
        <drawer:rad-side-drawer.drawerTransition>
            <drawer:PushTransition />
        </drawer:rad-side-drawer.drawerTransition>
        <drawer:rad-side-drawer.mainContent>
            <lv:RadListView class="pageStack" items="{{ quotes }}" swipeCells="true" itemSwipeProgressEnded="onSwipeEnded"  id="quotesListView">
                <lv:RadListView.listViewLayout>
                    <lv:ListViewLinearLayout scrollDirection="Vertical" />
                </lv:RadListView.listViewLayout>
                <lv:RadListView.itemTemplate>
                    <GridLayout rows="2*, *" columns="2*, 7*, 1*" class="quote-grid-cell">
                        <Image src="{{imageUrl}}" stretch="none" row="0" col="0" rowSpan="2" class="listView-image" />
                        <Label text="{{text}}" textWrap="true" row="0" col="1" class="listView-quoteText" />
                        <Label text="{{author}}" textWrap="true" row="1" col="1" class="listView-author" />
                        <Label text='{{inFavorites ? "&#xf004;" : "&#xf08a;"}}' row="0" col="2" rowSpan="2" class="listView-icon" id="heart" tap="quotesListItemTap"/>
                    </GridLayout>
                </lv:RadListView.itemTemplate>
                <lv:RadListView.itemSwipeTemplate>
                    <GridLayout columns="1*, 12*">
                        <Button col="0" style="background-color: gray;" />
                    </GridLayout>
                </lv:RadListView.itemSwipeTemplate>
            </lv:RadListView>
        </drawer:rad-side-drawer.mainContent>
        <drawer:rad-side-drawer.drawerContent>
            <stackLayout id="drawer-content">
                <Label text="Explore all quotes" tap="goToQuotesList" class="drowerBtn" />
                <Label text="Shared by others" tap="goToShared" class="drowerBtn" />
                <Label text="My followings" tap="goToQuotesList" class="drowerBtn" />
                <Label text="My quotes" tap="goToQuotesList" class="drowerBtn" />
                <Label text="Log in" tap="goToLogin" class="drowerBtn" />
            </stackLayout>
        </drawer:rad-side-drawer.drawerContent>
    </drawer:rad-side-drawer>
</Page>
