<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:drawer="nativescript-telerik-ui/sidedrawer" navigatedTo="onNavigatedTo">
    <page.actionBar>
        <action-bar>
            <ActionBar.titleView>
                <Label text="QuotesApp" cssClass="custom-action-bar" id="title" />
            </ActionBar.titleView>
        </action-bar>
    </page.actionBar>
    <drawer:rad-side-drawer id="drawer" drawerLocation="Left">
        <drawer:rad-side-drawer.drawerTransition>
            <drawer:PushTransition />
        </drawer:rad-side-drawer.drawerTransition>
        <drawer:rad-side-drawer.mainContent>
            <ScrollView>
                <StackLayout class="pageStack">
                    <Label text="{{text}}" textWrap="true" class="quote quote-details" />
                    <Label text="{{author}}" textWrap="true" class="author" tap="getQuotesByAuthor" />
                    <Label col="0" text="tags: " textWrap="true" class="tagsLabel" />
                    <Repeater col="1" items="{{ tags }}" id="tagsTags">
                        <Repeater.itemsLayout>
                            <WrapLayout />
                        </Repeater.itemsLayout>
                        <Repeater.itemTemplate>
                            <Label text="{{ &value }}" textWrap="true" class="tagsTags" tap="getQuotesByTag" />
                        </Repeater.itemTemplate>
                    </Repeater>
                </StackLayout>
            </ScrollView>
        </drawer:rad-side-drawer.mainContent>
        <drawer:rad-side-drawer.drawerContent>
            <stackLayout id="drawer-content">
                <Label text="Explore all quotes" tap="goToQuotesList" class="drowerBtn" />
                <Label text="Shared by others" tap="goToShared" class="drowerBtn" />
                <Label text="My followings" tap="goToQuotesList" class="drowerBtn" />
                <Label text="My quotes" tap="goToQuotesList" class="drowerBtn" />
                <Label text="Log in" tap="goToLogin" class="drowerBtn" />
            </stackLayout>
        </drawer:rad-side-drawer.drawerContent>
    </drawer:rad-side-drawer>
</Page>
